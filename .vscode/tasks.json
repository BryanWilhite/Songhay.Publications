{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Songhay.Publications.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [Release]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Songhay.Publications.sln",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "command": "nuget",
            "label": "NuGet pack Songhay.Publications",
            "isBackground": false,
            "type": "shell",
            "args": [
                "pack",
                "Songhay.Publications.nuspec",
                "-Verbosity",
                "detailed"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Songhay.Publications"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish [Songhay.Publications.Shell, linux-x64]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "${workspaceFolder}/Songhay.Publications.Shell/Songhay.Publications.Shell.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--configuration",
                "Release",
                "--self-contained",
                "false",
                "--runtime",
                "linux-x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish [Songhay.Publications.Shell, win-x64]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "${workspaceFolder}/Songhay.Publications.Shell/Songhay.Publications.Shell.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--configuration",
                "Release",
                "--self-contained",
                "false",
                "--runtime",
                "win-x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [Songhay.Publications.Tests]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Songhay.Publications.Tests/Songhay.Publications.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch [Songhay.Publications.Tests]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Songhay.Publications.Tests/Songhay.Publications.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "command": "wyam",
            "label": "wyam",
            "isBackground": false,
            "type": "shell",
            "args": [
                "build",
                "--output",
                "./docs"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "wyam: add .nojekyll file for GitHub",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "linux": {
                "command": "touch",
                "args": [
                    ".nojekyll"
                ]
            },
            "windows": {
                "command": "New-Item",
                "args": [
                    "-ItemType",
                    "file",
                    ".nojekyll"
                ]
            },
            "problemMatcher": []
        }
    ]
}