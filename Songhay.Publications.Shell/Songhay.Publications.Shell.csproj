<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyVersion>5.2.5</AssemblyVersion>
    <RootNamespace>Songhay.Publications.Shell</RootNamespace>

    <Title>Songhay Publications Shell</Title>
    <Description>The Studio Publications Shell for commandline automation of Activities.</Description>
    <Authors>Bryan D. Wilhite</Authors>
    <Copyright>(c) 2021 Bryan D. Wilhite</Copyright>
    <Company>Songhay System</Company>

    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <ApplicationIcon>songhay.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Songhay.Publications\Songhay.Publications.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CloneExtensions" Version="1.4.2" />
    <PackageReference Include="Markdig" Version="0.25.0" />
    <PackageReference Include="SonghayCore" Version="5.2.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
